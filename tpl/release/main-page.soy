/**
 * блок баннер banner
 */
{template banner}
<a href="{$url}">{\n}
<div class="stock" align="center">{\n}
  <object classid="clsid:d27cdb6e-ae6d-11cf-96b8-444553540000" codebase="http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=7,0,0,0" width="474" height="162">{\n}
    <param name="movie" value="{$src}" />{\n}
	<param name="quality" value="high" />{\n}
	<param name="bgcolor" value="#ffffff" />{\n}
    <param name="wmode" value="opaque" />{\n}
    <embed wmode=transparent src="{$src}" quality="high" bgcolor="#ffffff" width="474" height="162" type="application/x-shockwave-flash" pluginspage="http://www.macromedia.com/go/getflashplayer" />{\n}
  </object>{\n}
  </div>{\n}
 </a>{\n}
{/template}

