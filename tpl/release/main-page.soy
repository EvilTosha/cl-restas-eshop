{namespace soy.main-page}

/**
 * блок Товар дня daily
 */
{template daily}
<!-- товар дня  -->{\n}
<div class="block block-daily-item">{\n}
  <p class="h2">Товар дня <span>&ndash; специальная цена только сегодня!</span></p>{\n}
  <div class="switch">{\n}
	<ul class="slider-pager">{\n}
       {foreach $item in $items}
             {if isFirst($item)}
                 <li class="active">
                   <a href="/{$item.articul}" rel="nofollow">{index($item) + 1}</a>
                 </li>{\n}
             {else}
                  <li> <a href="/{$item.articul}" rel="nofollow">{index($item) + 1}</a></li>{\n}
             {/if}
       {/foreach}
	</ul>{\n}
    <ul class="slider">{\n}
      {foreach $item in $items}
        <li>{\n}
          <div class="pic">{\n}
            <a href="/{$item.articul}" rel="nofollow">
              <img class="img"
                   src="/pic/middle/{$item.articul}/{$item.pic}"
                   alt="{$item.name}"/>
            </a>{\n}
            // характеристики товаров для блока daily
            <dl class="specs">{\n}
              {foreach $option in $item.options}
                {if index($option)%2 == 0}
                  <dt>{$option}</dt>{\n}
                {else}
                  <dd>{$option}</dd>{\n}
                {/if}
              {/foreach}
            </dl>{\n}
            // --- характеристики товаров
          </div>{\n}
          <div class="info">{\n}
	         <p class="h2"><a href="/{$item.articul}">{$item.name}</a></p>{\n}
	         <p class="bottom">{\n}
			   <big class="price">{$item.showsiteprice}<small>руб.</small></big>{\n} // цена вида  8 490
               <span class="add">{\n}
			     {$item.buttonaddcart | noAutoescape}
               </span>{\n}
	         </p>{\n}
          </div>{\n}
         </li>{\n}
       {/foreach}
    </ul>{\n}
  </div>{\n}
</div>{\n}
{/template}


/**
 * блок Лучшие цены best
 */
{template best}
<!-- лучшие цены  -->{\n}
<div class="full best-items">{\n}
  <div class="hspace">{\n}
    <p class="h2">{\n}
      Лучшие цены <span>{\n}
        &mdash; на сайте дешевле, чем в магазинах</span>{\n}
    </p>{\n}
  </div>{\n}
  <ul class="slider">{\n}
    {foreach $item in $items}
      {if index($item) %4 == 0}
        <li class="page">{\n}
          <ul class="catalog">{\n}
      {/if}
      <li class="item block">{\n}
        <p class="place">{\n}
          <a href="/{$item.grouplink}">{$item.groupname}</a>{\n}
        </p>{\n}
        <div class="area">{\n}
          <p class="badge">{\n}
            <img src="/img/bestprice.png" alt="Лучшая цена"/>{\n}
          </p>{\n}
          <p class="rating rating5"><i></i></p>{\n}
        </div>{\n}
        <div class="pic">{\n}
          <a href="/{$item.articul}">{\n}
            <img src="/pic/middle/{$item.articul}/{$item.pic}" alt="{$item.name}"/>{\n}
          </a>{\n}
        </div>{\n}
        <div class="info">{\n}
          <p class="h2">{\n}
            <a href="/{$item.articul}">{\n}
              {$item.name}</a>{\n}
          </p>{\n}
          <big class="price">{$item.showsiteprice}<var>руб.</var></big>{\n}
          <span class="add">{\n}
            {$item.buttonaddcart | noAutoescape}
          </span>{\n}
          <small class="price-old">{\n}
            {$item.showprice}  руб.</small>{\n}
        </div>{\n}
      </li>{\n}
      {if index($item) % 4 == 3 or isLast($item)}
          </ul>{\n}
        </li>{\n}
      {/if}
    {/foreach}
  </ul>{\n}
</div>{\n}
{\n}
{/template}


/**
 * блок Хиты продаж hit
 */
{template hit}
<!-- хиты продаж -->{\n}
<div class="left hit-items">{\n}
