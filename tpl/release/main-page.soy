	<p class="what">Что чаще всего выбирают покупатели?</p>{\n}
  </div>{\n}

  <ul class="catalog">{\n}
    {foreach $item in $items}
	<li class="item">{\n}
          <div class="pic block">{\n}
              <a href="/{$item.pic}">{\n}
                  <img src="/pic/small/{$item.articul}/{$item.pic}" alt="{$item.name}"/>{\n}
              </a>{\n}
          </div>{\n}
	  <div class="area">{\n}
		<p class="rating rating5"><i></i></p>{\n}
	  </div>{\n}
	  <div class="info">{\n}
		<p class="h2"><a href="/{$item.articul}">{$item.name}</a></p>{\n}
		<big class="price">{$item.showsiteprice}<var>руб.</var></big>{\n}
		<span class="add">{\n}
          {$item.buttonaddcart | noAutoescape}
        </span>{\n}
	  </div>{\n}
	  <div class="review block">{\n}
		<p class="ico"><img src="{$item.options.0}" alt=""/></p>{\n}
		<p><strong>{$item.options.1}</strong></p>{\n}
		<p>{$item.options.2}</p>{\n}
		<dfn></dfn>{\n}
	  </div>{\n}
	</li>{\n}
    {/foreach}
  </ul>{\n}
</div>{\n}
{/template}


